<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".animals.PageAnimalActivity"
    android:background="@drawable/green_bg_tickets"
    >

    <!--> HEADER <-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/greenBackground"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageButton
            android:id="@+id/ticketsIconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/greenBackground"
            android:clickable="true"
            android:onClick="onIconButtonClick"
            android:outlineSpotShadowColor="@color/greenBackground"
            android:src="@drawable/confirmation_number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/eventsIconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/greenBackground"
            android:clickable="true"
            android:onClick="onIconButtonClick"
            android:outlineSpotShadowColor="@color/greenBackground"
            android:src="@drawable/event_seat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/animalsIconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/greenBackground"
            android:clickable="true"
            android:onClick="onIconButtonClick"
            android:outlineSpotShadowColor="@color/greenBackground"
            android:src="@drawable/pets"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/notificationsIconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/greenBackground"
            android:clickable="true"
            android:onClick="onIconButtonClick"
            android:outlineSpotShadowColor="@color/greenBackground"
            android:src="@drawable/notifications"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/accountIconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/greenBackground"
            android:clickable="true"
            android:onClick="onIconButtonClick"
            android:outlineSpotShadowColor="@color/greenBackground"
            android:src="@drawable/account"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        >

        <!-- Add your content views here -->

        <TextView
            android:id="@+id/specie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/baloo_bhai"
            android:textColor="@color/greenBackground"
            android:textSize="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            app:layout_constraintTop_toBottomOf="@id/specie">

            <ImageView
                android:id="@+id/animalImg"
                android:layout_width="160dp"
                android:layout_height="270dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0"
                app:layout_constraintHorizontal_bias="0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBaseline_toTopOf="parent" />

            <RelativeLayout
                android:layout_width="220dp"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0">

                <TextView
                    android:id="@+id/latin"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:textColor="@color/greenBackground"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/descent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:textColor="@color/greenBackground"
                    android:layout_marginTop="70dp"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/population"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:textColor="@color/greenBackground"
                    android:layout_marginTop="140dp"
                    android:textSize="18dp" />


                <TextView
                    android:id="@+id/lifespan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:textColor="@color/greenBackground"
                    android:layout_marginTop="210dp"
                    android:textSize="18dp" />

            </RelativeLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="320dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/comment_section"
            app:layout_constraintTop_toBottomOf="@id/specie">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:layout_editor_absoluteX="0dp"
                tools:layout_editor_absoluteY="0dp"
                >
                <LinearLayout
                    android:id="@+id/commentLevel1"
                    android:layout_width="370dp"
                    android:layout_height="match_parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0"
                    android:orientation="vertical"
                    >
                </LinearLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

   <!-- Footer -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/footerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- Add your footer content here -->

        <TextView
            android:id="@+id/aboutLink"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:autoLink="web"
            android:fontFamily="@font/baloo_bhai"
            android:text="O NAMA"
            android:textColor="@color/greenBackground"
            android:textSize="30dp"
            android:layout_marginRight="10dp"
            android:linksClickable="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>