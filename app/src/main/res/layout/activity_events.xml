<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventsActivity"
    android:background="@drawable/green_bg_tickets"
    >

    <!--> HEADER <-->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/greenBackground"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp">

        <ImageButton
            android:id="@+id/ticketsIconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/greenBackground"
            android:clickable="true"
            android:onClick="onIconButtonClick"
            android:outlineSpotShadowColor="@color/greenBackground"
            android:src="@drawable/confirmation_number"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/eventsIconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/greenBackground"
            android:clickable="true"
            android:onClick="onIconButtonClick"
            android:outlineSpotShadowColor="@color/greenBackground"
            android:src="@drawable/event_seat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/animalsIconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/greenBackground"
            android:clickable="true"
            android:onClick="onIconButtonClick"
            android:outlineSpotShadowColor="@color/greenBackground"
            android:src="@drawable/pets"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/notificationsIconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/greenBackground"
            android:clickable="true"
            android:onClick="onIconButtonClick"
            android:outlineSpotShadowColor="@color/greenBackground"
            android:src="@drawable/notifications"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.7"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/accountIconButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/greenBackground"
            android:clickable="true"
            android:onClick="onIconButtonClick"
            android:outlineSpotShadowColor="@color/greenBackground"
            android:src="@drawable/account"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.9"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp"
        android:layout_marginTop="80dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <!-- Add your content views here -->


            <TextView
                android:id="@+id/name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/baloo_bhai"
                android:gravity="center_horizontal"
                android:text="Novi stanovnik"
                android:textColor="@color/greenBackground"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/redPanda"
                android:layout_width="280dp"
                android:layout_height="440dp"
                android:layout_marginTop="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/new_red_panda" />

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/like1"
                        android:layout_width="27dp"
                        android:layout_height="23dp"
                        android:layout_marginStart="65dp"
                        android:layout_marginTop="4dp"
                        android:clickable="true"
                        android:onClick="onIconButtonClick"
                        android:src="@drawable/like"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/number_of_likes_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/baloo_bhai"
                        android:textColor="@color/greenBackground"
                        android:textSize="20dp"
                        android:layout_marginStart="95dp"
                        app:layout_constraintVertical_bias="0.5"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />

                </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/description1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/baloo_bhai"
                android:gravity="center_horizontal"
                android:text="Posetite nas i predložite ime!"
                android:textColor="@color/greenBackground"
                android:textSize="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greenBackground" />

            <TextView
                android:id="@+id/name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/baloo_bhai"
                android:gravity="center_horizontal"
                android:text="Još jedna prinova"
                android:textColor="@color/greenBackground"
                android:textSize="30dp"
                android:layout_marginTop="30dp"/>

            <ImageView
                android:id="@+id/hippo"
                android:layout_width="280dp"
                android:layout_height="400dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/baby_hippo" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/like2"
                    android:layout_width="27dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:onClick="onIconButtonClick"
                    android:src="@drawable/like"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/number_of_likes_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:textColor="@color/greenBackground"
                    android:textSize="20dp"
                    android:layout_marginStart="95dp"
                    app:layout_constraintVertical_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/description2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/baloo_bhai"
                android:gravity="center_horizontal"
                android:text="Najslađe što ćete videti danas!"
                android:textColor="@color/greenBackground"
                android:textSize="20dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greenBackground" />


            <TextView
                android:id="@+id/name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/baloo_bhai"
                android:gravity="center_horizontal"
                android:text="Četiri je družina"
                android:textColor="@color/greenBackground"
                android:layout_marginTop="30dp"
                android:textSize="30dp" />


            <ImageView
                android:id="@+id/dogs"
                android:layout_width="280dp"
                android:layout_height="400dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/baby" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/like3"
                    android:layout_width="27dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:onClick="onIconButtonClick"
                    android:src="@drawable/like"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/number_of_likes_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:textColor="@color/greenBackground"
                    android:textSize="20dp"
                    android:layout_marginStart="95dp"
                    app:layout_constraintVertical_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/description3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/baloo_bhai"
                android:gravity="center_horizontal"
                android:text="4 bebe jorkija!"
                android:textColor="@color/greenBackground"
                android:textSize="20dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greenBackground" />


            <TextView
                android:id="@+id/name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/baloo_bhai"
                android:gravity="center_horizontal"
                android:text="Kralj džulijan pozira"
                android:textColor="@color/greenBackground"
                android:layout_marginTop="30dp"
                android:textSize="30dp" />


            <ImageView
                android:id="@+id/mercat"
                android:layout_width="280dp"
                android:layout_height="400dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/posing_mercat" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/like4"
                    android:layout_width="27dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:onClick="onIconButtonClick"
                    android:src="@drawable/like"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/number_of_likes_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:textColor="@color/greenBackground"
                    android:textSize="20dp"
                    android:layout_marginStart="95dp"
                    app:layout_constraintVertical_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/description4"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/baloo_bhai"
                android:gravity="center_horizontal"
                android:text="Danas je bio raspoložen za slikanje"
                android:textColor="@color/greenBackground"
                android:textSize="20dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/greenBackground" />


            <TextView
                android:id="@+id/name5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/baloo_bhai"
                android:gravity="center_horizontal"
                android:text="Odabrana ekipa"
                android:textColor="@color/greenBackground"
                android:textSize="30dp"
                android:layout_marginTop="30dp"
                />


            <ImageView
                android:id="@+id/alpaca"
                android:layout_width="280dp"
                android:layout_height="400dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/alpacas" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/like5"
                    android:layout_width="27dp"
                    android:layout_height="23dp"
                    android:layout_marginStart="65dp"
                    android:layout_marginTop="4dp"
                    android:clickable="true"
                    android:onClick="onIconButtonClick"
                    android:src="@drawable/like"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/number_of_likes_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:textColor="@color/greenBackground"
                    android:textSize="20dp"
                    android:layout_marginStart="95dp"
                    app:layout_constraintVertical_bias="0.5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/description5"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/baloo_bhai"
                android:gravity="center_horizontal"
                android:text="Iskoristite lep dan kao ova družina!"
                android:textColor="@color/greenBackground"
                android:textSize="20dp" />


            <!--> FOOTER <-->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/aboutLink"
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:autoLink="web"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="O NAMA"
                    android:textColor="@color/greenBackground"
                    android:textSize="30dp"
                    android:layout_marginRight="10dp"
                    android:linksClickable="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>