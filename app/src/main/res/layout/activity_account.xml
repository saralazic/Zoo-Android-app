<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/greenBackground"
    tools:context=".AccountActivity"
    >


        <!--> HEADER <-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="1dp"
            android:background="@color/greenBackground"
            app:layout_constraintTop_toTopOf="parent"
            >

                <ImageButton
                    android:id="@+id/ticketsIconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/confirmation_number"
                    android:outlineSpotShadowColor="@color/greenBackground"
                    android:background="@color/greenBackground"
                    android:clickable="true"
                    android:onClick="onIconButtonClick"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.1"
                    />

                <ImageButton
                    android:id="@+id/eventsIconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/event_seat"
                    android:outlineSpotShadowColor="@color/greenBackground"
                    android:background="@color/greenBackground"
                    android:clickable="true"
                    android:onClick="onIconButtonClick"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.3"
                    />

                <ImageButton
                    android:id="@+id/animalsIconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/pets"
                    android:outlineSpotShadowColor="@color/greenBackground"
                    android:background="@color/greenBackground"
                    android:clickable="true"
                    android:onClick="onIconButtonClick"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.5"
                    />

                <ImageButton
                    android:id="@+id/notificationsIconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/notifications"
                    android:outlineSpotShadowColor="@color/greenBackground"
                    android:background="@color/greenBackground"
                    android:clickable="true"
                    android:onClick="onIconButtonClick"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.7"
                    />

                <ImageButton
                    android:id="@+id/accountIconButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/account"
                    android:outlineSpotShadowColor="@color/greenBackground"
                    android:background="@color/greenBackground"
                    android:clickable="true"
                    android:onClick="onIconButtonClick"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.9"
                    />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/fat_panda"
            app:layout_constraintBottom_toTopOf="@id/linear_layout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintVertical_bias="0.187" />

        <LinearLayout
            android:id="@+id/linear_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header"
            app:layout_constraintVertical_bias="0.881"

            >

                <TextView
                    android:id="@+id/emailTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:textColor="@color/white"
                    android:textSize="16dp" />

                <EditText
                    android:id="@+id/usernameTextEdit"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/baloo_bhai"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textSize="16dp"

                    />

                <EditText
                    android:id="@+id/passwordTextEdit"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/baloo_bhai"
                    android:inputType="textPassword"
                    android:textColor="@color/white"
                    android:textSize="16dp"

                    />

                <EditText
                    android:id="@+id/firstNameEditText"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/baloo_bhai"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textSize="16dp"

                    />

                <EditText
                    android:id="@+id/lastNameEditText"
                    android:layout_width="300dp"
                    android:layout_height="52dp"
                    android:ems="10"
                    android:fontFamily="@font/baloo_bhai"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textSize="16dp"

                    />


                <EditText
                    android:id="@+id/addressEditText"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/baloo_bhai"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textSize="16dp"

                    />

                <EditText
                    android:id="@+id/phoneEditText"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:fontFamily="@font/baloo_bhai"
                    android:inputType="text"
                    android:textColor="@color/white"
                    android:textSize="16dp"

                    />

                <Button
                    android:id="@+id/confirm_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/baloo_bhai"
                    android:text="Potvrdi izmenu"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

                <TextView
                    android:id="@+id/textinput_error"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteX="130dp"
                    tools:layout_editor_absoluteY="20dp"
                    android:textColor="@color/errorColor"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:fontFamily="@font/baloo_bhai"
                    />

        </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>